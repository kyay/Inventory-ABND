<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_nav_header_background"
        android:scaleType="centerCrop"
        android:src="@drawable/header_nav_bg" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/diamter_profile_pic"
        android:layout_height="@dimen/diamter_profile_pic"
        android:layout_marginStart="@dimen/margin_navigation_header"
        android:layout_marginLeft="@dimen/margin_navigation_header"
        android:layout_marginTop="@dimen/margin_navigation_header"
        android:layout_marginBottom="@dimen/preferred_margin"
        app:srcCompat="@drawable/ic_account_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="@dimen/margin_navigation_header"
        android:layout_marginLeft="@dimen/margin_navigation_header"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Youssef Shoaib" />

        <TextView
            android:id="@+id/email_text"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="canonballt@gmail.com" />

    </LinearLayout>

</RelativeLayout>